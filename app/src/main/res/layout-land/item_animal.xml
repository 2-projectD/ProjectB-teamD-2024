
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F7F5"
    android:padding="16dp">


    <TextView
        android:id="@+id/animalNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animal_number" />

    <TextView
        android:id="@+id/animalBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animal_breed" />

    <TextView
        android:id="@+id/animalNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animal_nickname" />

</LinearLayout>
